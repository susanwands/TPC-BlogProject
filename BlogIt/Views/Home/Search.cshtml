@model BlogIt.Models.ViewModel
@{
    ViewBag.Title = "Search";
}



<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <br /><br /><br />
            <h2>Search Results</h2>
            <table class="table">
                @foreach (var p in Model.Posts)
                {
                    <tr>
                        <td>
                            <ul>
                                <li>
                                    @p.DatePosted.Month / @p.DatePosted.Day / @p.DatePosted.Year - @p.Title
                                </li>
                                <li>
                                    @p.Content
                                </li>
                            </ul>
                        </td>
                        <td>
                            <form method="get" action="/Home/EditPost/@p.PostId">
                                <button id="editPost" type="submit" class="btn btn-default btn-xs" name="PostId">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form method="get" action="/Home/DeletePost/@p.PostId">
                                <button id="deletePost" type="submit" class="btn btn-default btn-xs" name="PostId">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>


        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-12 column">
            <table class="table">
                @foreach (var a in Model.Articles)
                {
                    <tr>

                        <td><a href="@a.ArticleLink" target="_blank" />@a.ArticleTitle</td>
                        <td>
                            <form method="get" action="Home/EditArticle" role="form">
                                <button id="editArticle" type="submit" class="btn btn-default btn-xs" name="ArticleId" value="@a.ArticleId">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form action="Home/DeleteArticle">
                                <button id="deleteArticle" type="submit" class="btn btn-default btn-xs" name="ArticleId" value="@a.ArticleId">Delete</button>
                            </form>
                        </td>
                    </tr>

                }
            </table>

        </div>

    </div>
</div>




